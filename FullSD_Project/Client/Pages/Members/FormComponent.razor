<EditForm Model="@member" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>First Name: </label>
            <div>
                <InputText @bind-Value="@member.FirstName" class="form-control" />
                <ValidationMessage For="@(() => member.FirstName)" />
            </div>
        </div>

        <div class="form-group">
            <label>Last Name: </label>
            <div>
                <InputText @bind-Value="@member.LastName" class="form-control" />
                <ValidationMessage For="@(() => member.LastName)" />
            </div>
        </div>

        <div class="form-group">
            <label>Member Card Number: </label>
            <div>
                <InputText @bind-Value="@member.MemberCardNo" class="form-control" />
                <ValidationMessage For="@(() => member.MemberCardNo)" />
            </div>
        </div>

        <div class="form-group">
            <label>Address: </label>
            <div>
                <InputText @bind-Value="@member.Address" class="form-control" />
                <ValidationMessage For="@(() => member.Address)" />
            </div>
        </div>

        <div class="form-group">
            <label>Contact Number: </label>
            <div>
                <InputText @bind-Value="@member.ContactNumber" class="form-control" />
                <ValidationMessage For="@(() => member.ContactNumber)" />
            </div>
        </div>

        <div class="form-group">
            <label>Email Address: </label>
            <div>
                <InputText @bind-Value="@member.EmailAddress" class="form-control" />
                <ValidationMessage For="@(() => member.EmailAddress)" />
            </div>
        </div>
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="members" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Member member { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
